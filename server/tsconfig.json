{
  "compilerOptions": {
    "target": "es2020",                      // <-- Important
    "module": "esnext",                       // <-- Important
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    /* Paths */
    "rootDir": "src",
    "outDir": "dist",
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src"]
}

